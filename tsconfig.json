{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@models/*": ["src/models/*"],
            "@data/*": ["src/data/*"],
            "@util/*": ["src/util/*"],
            "@routes/*": ["src/routes/*"],
            "*": [
                "node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    },
    "include": [
        "src/**/*"
    ]
}